function updateStatus(msg) {
  document.getElementById('status').textContent = msg;
  console.log('ğŸ“ Status:', msg);
}
function toggleMenu() {
  console.log('ğŸ” toggleMenu() CALLED!');
  updateStatus('Toggle menu funkcia zavolanÃ¡!');
  const menu = document.getElementById('hamburgerMenu');
  const overlay = document.getElementById('overlay');
  if (!menu) {
    console.error('âŒ Menu element nenÃ¡jdenÃ½!');
    updateStatus('ERROR: Menu element nenÃ¡jdenÃ½!');
    return;
  }
  if (menu.classList.contains('active')) {
    console.log('ğŸ”’ ZatvÃ¡rÃ¡m menu');
    updateStatus('ZatvÃ¡rÃ¡m menu...');
    menu.classList.remove('active');
    overlay.classList.remove('active');
  } else {
    console.log('ğŸ”“ OtvÃ¡ram menu');
    updateStatus('OtvÃ¡ram menu...');
    menu.classList.add('active');
    overlay.classList.add('active');
  }
}
document.addEventListener('DOMContentLoaded', function() {
  console.log('ğŸ“± DOMContentLoaded fired!');
  updateStatus('DOM naÄÃ­tanÃ½, pripÃ¡jam listenery...');
  const hamburgerBtn = document.getElementById('hamburgerBtn');
  const closeBtn = document.getElementById('closeBtn');
  const overlay = document.getElementById('overlay');
  const menuItems = document.querySelectorAll('.menu-item');
  console.log('Elementy:');
  console.log('- hamburgerBtn:', hamburgerBtn ? 'âœ…' : 'âŒ');
  console.log('- closeBtn:', closeBtn ? 'âœ…' : 'âŒ');
  console.log('- overlay:', overlay ? 'âœ…' : 'âŒ');
  console.log('- menuItems:', menuItems.length);
  if (hamburgerBtn) {
    hamburgerBtn.addEventListener('click', function() {
      console.log('ğŸ–±ï¸ Hamburger button CLICKED!');
      updateStatus('Hamburger button kliknutÃ½!');
      toggleMenu();
    });
    console.log('âœ… Hamburger listener pripojenÃ½');
  } else {
    console.error('âŒ Hamburger button nenÃ¡jdenÃ½!');
  }
  if (closeBtn) {
    closeBtn.addEventListener('click', function() {
      console.log('âŒ Close button CLICKED!');
      toggleMenu();
    });
    console.log('âœ… Close listener pripojenÃ½');
  }
  if (overlay) {
    overlay.addEventListener('click', function() {
      console.log('ğŸŒ‘ Overlay CLICKED!');
      toggleMenu();
    });
    console.log('âœ… Overlay listener pripojenÃ½');
  }
  menuItems.forEach(function(item) {
    item.addEventListener('click', function() {
      const action = this.getAttribute('data-action');
      console.log('ğŸ“Œ Menu item clicked:', action);
      updateStatus('KliknutÃ©: ' + action);
      alert('Klikli ste na: ' + action);
      toggleMenu();
    });
  });
  console.log('âœ… Menu items listenery pripojenÃ©');
  updateStatus('VÅ¡etko pripravenÃ©! Kliknite na [â˜°]');
  console.log('=====================');
  console.log('âœ… INICIALIZÃCIA OK!');
  console.log('=====================');
